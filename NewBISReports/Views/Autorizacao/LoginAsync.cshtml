@{
    //Esta página possui layout proprio, pois é acessada externamente
    Layout = null;
}
@model NewBISReports.Models.Autorizacao.LoginModel
<!DOCTYPE html>
<html>
<head>
     <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"]</title>
    <meta content="A fully featured admin theme which can be used to build CRM, CMS, etc." name="description" />
    <meta content="Coderthemes" name="author" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- CSS -->
    <link href="~/KingAdmin/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="~/KingAdmin/assets/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="~/KingAdmin/assets/css/main.css" rel="stylesheet" type="text/css">
    <link href="~/KingAdmin/assets/css/my-custom-styles.css" rel="stylesheet" type="text/css">

    <!--[if lte IE 9]>
        <link href="~/assets/css/main-ie.css" rel="stylesheet" type="text/css"/>
        <link href="~/assets/css/main-ie-part2.css" rel="stylesheet" type="text/css"/>
    <![endif]-->
    <!-- Fav and touch icons -->
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="~/assets/ico/kingadmin-favicon144x144.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="~/assets/ico/kingadmin-favicon114x114.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="~/assets/ico/kingadmin-favicon72x72.png">
    <link rel="apple-touch-icon-precomposed" sizes="57x57" href="~/assets/ico/kingadmin-favicon57x57.png">
    <link rel="shortcut icon" href="~/images/ico/orion_vetor_preto.png">

    <meta charset="utf-8" />
</head>

@{
    ViewData["Title"] = "Login";
}
<body>
    @* O parametro returnUrl serve para rotas internas do aplicativo, quando tenta-se acessar alguma tela sem ter autorização,
        Já o ExtReturnUrl, serve para processar uma tentativa de login externo. Posso talvez separar isso em telas ou até mesmo controladores
        distintos para evitar confusão*@
    <div class="wrapper full-page-wrapper page-auth page-login text-center">
        <div class="inner-page">
           @* <div class="row">
                <div class="col-lg-6">
                    <div class="container">

                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="container">

                    </div>
                </div>
            </div> *@

            @*<p style="font-size:4em;" class="text-danger">ATENÇÃO!</p>
            <p style="font-size:2em;" class="text-danger">Novo sistema de acesso ao Horizon</p>
            <a asp-area="Account" asp-controller="Account" asp-action="IndexresetSenha" class="text-danger" style="font-size:1.5em">Instruções: Clique Aqui</a>*@
            <div class="login-box center-block">
                <img src="@Url.Content(Model.CaminhoIconeEmpresa)" class="img-responsive">
                <form asp-controller="Autorizacao" asp-action="LoginAsync" asp-route-returnUrl="@TempData["ReturnUrl"]" formmethod="post" class="form-horizontal" role="form">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <p class="title">Use seu login ou endereço de e-mail</p>
                    <div class="form-group">
                        <label asp-for="@Model.EmailOrLogin" class="control-label sr-only">Login</label>
                        <div class="col-sm-12 col-md-12">
                            <div class="input-group">
                                <input type="text" asp-for="@Model.EmailOrLogin" placeholder="login ou e-mail" id="username" class="form-control">
                                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                            </div>
                            <span asp-validation-for="@Model.EmailOrLogin" class="text-danger"></span>
                        </div>
                    </div>
                    <label for="password" class="control-label sr-only">Senha</label>
                    <div class="form-group">
                        <div class="col-sm-12 col-md-12">
                            <div class="input-group">
                                <input type="password" asp-for="@Model.Password" placeholder="senha" id="password" class="form-control">
                                <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                            </div>
                        </div>
                    </div>
                    @*<label class="fancy-checkbox">
                        <input type="checkbox">
                        <span>Lembrar?</span>
                    </label>*@
                    <input type="submit" value="Entrar" class="btn btn-primary btn-lg btn-block btn-auth" />
                    <!--incluir um botão "Voltar" que faz o browser back button-->
                </form>
                <!--a asp-area="Account" asp-controller="Account" asp-action="IndexresetSenha">Problemas para entrar? Clique Aqui</a-->
            </div>
        </div>
    </div>

     <!-- Javascript Mínimo -->
<script src="~/KingAdmin/assets/js/jquery/jquery-2.1.0.min.js"></script>
<script src="~/KingAdmin/assets/js/bootstrap/bootstrap.js"></script>
<script src="~/KingAdmin/assets/js/plugins/modernizr/modernizr.js"></script>
<script src="~/KingAdmin/assets/js/plugins/bootstrap-tour/bootstrap-tour.custom.js"></script>

<!-- Javascript Datepicker -->
<script src="~/KingAdmin/assets/js/plugins/jquery-slimscroll/jquery.slimscroll.min.js"></script>
<script src="~/KingAdmin/assets/js/king-common.js"></script>
<script src="~/KingAdmin/assets/js/plugins/bootstrap-multiselect/bootstrap-multiselect.js"></script>
<script src="~/KingAdmin/assets/js/plugins/bootstrap-datepicker/bootstrap-datepicker.js"></script>
<script src="~/KingAdmin/assets/js/plugins/select2/select2.min.js"></script>
</body>
</html>

