
@model NewBISReports.Models.Administracao.ChangePasswordViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="wrapper full-page-wrapper page-auth page-login text-center">
    <div class="inner-page">
  
        <div class="login-box center-block">
            <section>                    
                <p style="font-size:1.5em;" class="text-danger">Bem vindo,</p>
                <p style="font-size:1.5em;" class="text-danger">@Model.FullName</p>
                <p style="font-size:1em;" class="text-danger">Insira sua nova senha no formulario abaixo</p>
                <hr />
                <form asp-controller="Administracao" asp-action="ChangePassword" method="post">                        
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Password">Senha</label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword">Confirmar senha</label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div> 
                    <input asp-for="Id" value="@Model.Id" hidden/>                      
                    <button type="submit" class="btn btn-default">Criar Nova Senha</button>
                </form>
             </section>
        </div>
    </div>
</div>

