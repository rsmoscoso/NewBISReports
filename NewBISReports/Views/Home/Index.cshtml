@using NewBISReports.Models.Classes;
@model NewBISReports.Models.HomeModel

@{
    //comentário.
    var buttonname = "Excel";
    var startdate = Model != null && !String.IsNullOrEmpty(Model.StartDate) ? Model.StartDate.ToString() : DateTime.Now.ToString("dd/MM/yyyy");
    var enddate = Model != null && !String.IsNullOrEmpty(Model.EndDate) ? Model.EndDate.ToString() : DateTime.Now.ToString("dd/MM/yyyy");
    REPORTTYPE type = REPORTTYPE.RPT_ANALYTICGRANTEDBIS;
    if (ViewBag.Type != null)
    {
        type = (REPORTTYPE)ViewBag.Type;
    }
    var title = NewBISReports.Models.HomeModel.GetTypeDescription(type);
    var titlecomment = NewBISReports.Models.HomeModel.GetTypeComments(type);

    if (ViewBag.Persclassid == null)
    {
        ViewBag.Persclassid = new List<PersClasses>();
    }

    if (ViewBag.Persons == null)
    {
        ViewBag.Persons = new List<Persons>();
    }

    if (ViewBag.Clients == null)
    {
        ViewBag.Clients = new List<Clients>();
    }

    if (ViewBag.Devices == null)
    {
        ViewBag.Devices = new List<Devices>();
    }
}

<form method="post" asp-action="Index" data-parsley-validate novalidate>
    <input type="hidden" value="@startdate" id="hidData_Start" name="hidData_Start" />
    <input type="hidden" value="@enddate" id="hidData_End" name="hidData_End" />
    <input type="hidden" value="@type" id="Type" name="Type" asp-for="Type" />

    <div class="row">
        <div class="col-md-4 ">
            <ul class="breadcrumb">
                <li><i class="fa fa-home"></i><a href="#">Home</a></li>
                <li class="active">@title</li>
            </ul>
        </div>
    </div>

    <!-- QUADRO GERAL -->
    <div class="widget">
        <div class="widget-header">
            <h3><i class="fa fa-book"></i>@title</h3> <em>- @titlecomment</em>
            <div class="btn-group widget-header-toolbar">
                <a href="#" id="tour-focus" title="Destaque" class="btn-borderless btn-focus"><i class="fa fa-eye"></i></a>
                <a href="#" title="Expand/Collapse" class="btn-borderless btn-toggle-expand"><i class="fa fa-chevron-up"></i></a>
                <a href="#" title="Remove" class="btn-borderless btn-remove"><i class="fa fa-times"></i></a>
            </div>
        </div>
        <!-- PERÍODO -->
        <div class="row">
            <div class="col-sm-12">
                <div class="widget">
                    <div class="widget-content">
                        <div class="form-inline">
                            @if (type != REPORTTYPE.RPT_PHOTOS && type != REPORTTYPE.RPT_BADGES && type != REPORTTYPE.RPT_BADGENOUSE && type != REPORTTYPE.RPT_PERSONSAUTHORIZATIONS &&
                               type != REPORTTYPE.RPT_ALLLOCKOUT && type != REPORTTYPE.RPT_ALLVISITORS && type != REPORTTYPE.RPT_PERSONGENERAL && type != REPORTTYPE.RPT_COUNTBATH)
                            {
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                    <input type="text" id="StartDate" name="StartDate" asp-for="StartDate" class="form-control" placeholder="Data Inicial" required>
                                </div>
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                    <input type="text" id="EndDate" name="EndDate" asp-for="EndDate" class="form-control" placeholder="Data Final" required>
                                </div>
                            }
                            @if (type == REPORTTYPE.RPT_BADGENOUSE)
                            {
                                <input type="text" id="NDays" name="NDays" asp-for="NDays" class="form-control" placeholder="N. de Dias sem Uso do Crachá" value="30" required>
                            }

                            @if (type == REPORTTYPE.RPT_TOTALMEAL || type == REPORTTYPE.RPT_EXPORTMEAL || type == REPORTTYPE.RPT_COUNTBATH)
                            {
                                <button type="submit" name="exec" id="exec" asp-action="ExecPage" class="btn">Executar</button>
                            }
                            @if (type != REPORTTYPE.RPT_EXPORTMEAL && type != REPORTTYPE.RPT_COUNTBATH)
                            {
                                if (type == REPORTTYPE.RPT_PHOTOS)
                                {
                                    buttonname = "Gerar";
                                }
                                <button type="submit" name="excel" id="excel" asp-action="ExcelPage" class="btn" style="background-color: Green; color: White;">@buttonname</button>
                            }
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <!-- FIM PERÍODO -->
        <!-- INÍCIO DO CARD PESSOAS E UNIDADE -->
        <div class="row">
            @if (type == REPORTTYPE.RPT_ANALYTICGRANTEDBIS || type == REPORTTYPE.RPT_PERSONGENERAL || type == REPORTTYPE.RPT_LOGQRCODE)
            {
                @Html.Partial("IndexPessoas")
            }
            else if (type == REPORTTYPE.RPT_ANALYTICSMEALBIS)
            {
                @Html.Partial("IndexRefeicoes")
            }
            <!-- INÍCIO DO CARD UNIDADES -->

            @if (type != REPORTTYPE.RPT_PHOTOS && type != REPORTTYPE.RPT_BADGES && type != REPORTTYPE.RPT_BADGENOUSE && type != REPORTTYPE.RPT_PERSONGENERAL &&
               type != REPORTTYPE.RPT_LOGQRCODE && type != REPORTTYPE.RPT_COUNTBATH)
            {
                <div class="col-sm-6">
                    <div class="widget widget-table">
                        <div class="widget-header">
                            <h3><i class="fa fa-home"></i>Unidades</h3>
                            <button type="button" class="btn btn-link" data-toggle="tooltip" data-placement="top" title="Informações das divisões e leitoras"><i class="fa fa-question-circle"></i></button>
                        </div>
                        <div class="widget-content">
                            <div class="row">
                                <!-- INICIO UNIDADE -->
                                <fieldset>
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <div class="input-group input-group-sm">
                                                <label>Unidade:</label>
                                            </div>
                                            <select asp-for="CLIENTID" class="select2" name="CLIENTID" asp-controller="Home" asp-action="Index" onclick="form.submit();"
                                                    asp-items="@(new SelectList(ViewBag.Clients, "CLIENTID", "Description"))"></select>
                                        </div>
                                    </div>

                                </fieldset>
                                <!-- FIM UNIDADE -->
                                @if (type == REPORTTYPE.RPT_ANALYTICGRANTEDBIS)
                                {
                                    <!-- INICIO DEVICES-->
                                    <fieldset>
                                        <div class="col-sm-12">

                                            <label>Leitora de Acesso</label>
                                            <select multiple="multiple" asp-for="DEVICEID" class="select2 select2-multiple" name="DEVICEID"
                                                    asp-items="@(new SelectList(ViewBag.Devices, "ID", "DESCRIPTION"))"></select>
                                        </div>
                                    </fieldset>
                                    <!-- FIM DEVICES-->
                                }
                                @if (type == REPORTTYPE.RPT_PERSONSAUTHORIZATIONS || type == REPORTTYPE.RPT_READERAUTHORIZATION)
                                {
                                    <!-- INICIO AUTORIZAÇÕES-->
                                    <fieldset>
                                        <div class="col-sm-12">

                                            <label>Autorizações</label>
                                            <select multiple="multiple" asp-for="AUTHID" class="select2 select2-multiple" name="AUTHID"
                                                    asp-items="@(new SelectList(ViewBag.Authorizations, "AuthID", "Shortname"))"></select>
                                        </div>
                                    </fieldset>
                                    <!-- FIM AUTORIZAÇÕES-->
                                }
                            </div>
                        </div>
                    </div>
                </div>

            }
        </div>
        <!-- FIM DO CARD UNIDADES-->

    </div>
    <!-- FIM QUADRO GERAL -->

    @if (@Model != null && @Model.Meals != null)
    {
        @Html.Partial("IndexPivot");
    }

    @if (type == REPORTTYPE.RPT_COUNTBATH && @Model != null && @Model.Acessos != null)
    {
        @Html.Partial("IndexCount");
    }
</form>

 <!-- Javascript Mínimo -->
<script src="~/KingAdmin/assets/js/jquery/jquery-2.1.0.min.js"></script>
<script src="~/KingAdmin/assets/js/bootstrap/bootstrap.js"></script>
<script src="~/KingAdmin/assets/js/plugins/modernizr/modernizr.js"></script>
<script src="~/KingAdmin/assets/js/plugins/bootstrap-tour/bootstrap-tour.custom.js"></script>

<!-- Javascript Datepicker -->
<script src="~/KingAdmin/assets/js/plugins/jquery-slimscroll/jquery.slimscroll.min.js"></script>
<script src="~/KingAdmin/assets/js/king-common.js"></script>
<script src="~/KingAdmin/assets/js/plugins/bootstrap-multiselect/bootstrap-multiselect.js"></script>
<script src="~/KingAdmin/assets/js/plugins/bootstrap-datepicker/bootstrap-datepicker.js"></script>
<script src="~/KingAdmin/assets/js/plugins/select2/select2.min.js"></script>

<!-- JQUERY -->

<script type="text/javascript">
    $(document).ready(function() {
            $(function () {
        window.prettyPrint && prettyPrint();
        $('#StartDate').datepicker({
            format: 'dd/mm/yyyy'
        }).datepicker("setDate", document.getElementById('hidData_Start').defaultValue);;
        $('#StartDate').datepicker()
            .on('changeDate', function (ev) {
                $('#StartDate').datepicker('hide');
            });
    });

    $(function () {
        window.prettyPrint && prettyPrint();
        $('#EndDate').datepicker({
            format: 'dd/mm/yyyy'
        }).datepicker("setDate", document.getElementById('hidData_End').defaultValue);;
        $('#EndDate').datepicker()
            .on('changeDate', function (ev) {
                $('#EndDate').datepicker('hide');
            });
    });
});

    //se houver mensagem de erro na viewBAg, mostrar.
    var msgErro = '@ViewBag.MensagemErro';
    if(msgErro !== "")
        alert('@ViewBag.MensagemErro');
    
</script>

