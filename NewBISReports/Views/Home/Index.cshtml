                                        <div class="col-sm-12">

                                            <label>Autorizações</label>
                                            <select multiple="multiple" asp-for="AUTHID" class="select2 select2-multiple"
                                                name="AUTHID"
                                                asp-items="@(new SelectList(ViewBag.Authorizations, "AuthID", "Shortname"))"></select>
                                        </div>
